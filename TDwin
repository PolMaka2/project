from tkinter import *

root = Tk()
root.title('3D')
root.geometry('700x600')

canvas = Canvas(root, width=700, height=600, bg='white')
canvas.pack()

pov = IntVar()
pov.set(0)
red = Radiobutton(text="1", variable=pov, value=0)
green = Radiobutton(text="2", variable=pov, value=1)
blue = Radiobutton(text="3", variable=pov, value=2)
black = Radiobutton(text="4", variable=pov, value=3)
red.place(x=550, y=460)
green.place(x=550, y=480)
blue.place(x=550, y=500)
black.place(x=550, y=520)
